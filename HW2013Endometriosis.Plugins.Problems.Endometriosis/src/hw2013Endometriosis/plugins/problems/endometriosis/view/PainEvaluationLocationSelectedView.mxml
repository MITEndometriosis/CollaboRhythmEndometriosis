<tablet:TabletViewBase xmlns:fx="http://ns.adobe.com/mxml/2009"
					   xmlns:s="library://ns.adobe.com/flex/spark"
					   xmlns:tablet="collaboRhythm.shared.view.tablet.*"
					   xmlns:view="hw2013Endometriosis.plugins.problems.endometriosis.view.*"
					   title="PainEvaluationLocationSelected">
	<fx:Script><![CDATA[
		import hw2013Endometriosis.plugins.problems.endometriosis.controller.PainEvaluationHealthActionInputController;
		import hw2013Endometriosis.plugins.problems.endometriosis.model.PainEvaluationModel;

		[Bindable]
		private var _controller:PainEvaluationHealthActionInputController;
		private var _model:PainEvaluationModel;

		override public function set data(value:Object):void
		{
			super.data = value;

			_controller = value as PainEvaluationHealthActionInputController;
			_model = _controller.model;

		}

		private function formItemDisplayHandler (location:String):Boolean
		{
			if (_controller)
			{
				if (location == "ShoulderFormItem")
				return _controller.model.hasShoulderPain;
				if (location == "AbdomenFormItem")
								return _controller.model.hasAbdomenPain;
				if (location == "PelvisFormItem")
								return _controller.model.hasPelvisPain;
				if (location == "FlankFormItem")
								return _controller.model.hasFlankPain;
				if (location == "OtherFormItem")
								return _controller.model.hasOtherPain;
			}
			return false
		}

		]]></fx:Script>
<s:Panel title="Pain Evaluation">
	<s:Label text="The following questions will guide you in evaluating your pain symptoms."/>
	
</s:Panel>
</tablet:TabletViewBase>
