	<s:Panel title="Vaginal Bleeding Evaluation"
			 backgroundColor="0x778899" borderColor="0x778899"
			 width="1000"
			 x="20" y="20" skinClass="spark.skins.spark.PanelSkin">

		<s:layout>
			<s:VerticalLayout horizontalAlign="center"
							  paddingLeft="10" paddingRight="10"
							  paddingTop="10" paddingBottom="10"/>
		</s:layout>


		<s:Form skinClass="spark.skins.spark.FormSkin"
				backgroundColor="0xd3d3d3">
			<s:FormHeading label="Please evaluate any vaginal bleeding that you have."
						   skinClass="spark.skins.spark.FormHeadingSkin"
						   backgroundColor="0xd3d3d3"/>

			<s:FormItem label="Are you experiencing any vaginal bleeding?"
						skinClass="spark.skins.spark.FormItemSkin"
						backgroundColor="0xd3d3d3">
				<s:ToggleSwitch id="bleedingIndicatorToggleSwitch"
								skinClass="hw2013Endometriosis.plugins.problems.endometriosis.view.YesNoToggleSwitchSkin"
								click="bleedingIndicatorToggleSwitch_changeHandler(event)"
								accentColor="0x9370db"/>
			</s:FormItem>

			<s:FormItem label="What Color?"
						visible="{bleedingIndicatorToggleSwitch.selected}"
						includeInLayout="{bleedingIndicatorToggleSwitch.selected}"
						skinClass="spark.skins.spark.FormItemSkin"
						backgroundColor="0xd3d3d3">

				<s:HGroup>

					<s:RadioButton id="redBloodCheckBox" label="Red" skinClass="spark.skins.spark.RadioButtonSkin"
								   color="red"
								   click="redBloodCheckBox_changeHandler(event)"/>

					<s:RadioButton id="brownBloodCheckBox" label="Brown" skinClass="spark.skins.spark.RadioButtonSkin"
								   color="0xa52a2a"
								   click="brownBloodCheckBox_changeHandler(event)"/>
				</s:HGroup>
			</s:FormItem>

			<s:FormItem label="Do you have any blood clots?"
						visible="{bleedingIndicatorToggleSwitch.selected}"
						includeInLayout="{bleedingIndicatorToggleSwitch.selected}"
						skinClass="spark.skins.spark.FormItemSkin"
						backgroundColor="0xd3d3d3">
				<s:ToggleSwitch id="bloodClotsIndicatorToggleSwitch"
								skinClass="hw2013Endometriosis.plugins.problems.endometriosis.view.YesNoToggleSwitchSkin"
								click="bloodClotsIndicatorToggleSwitch_changeHandler(event)"
								accentColor="0x9370db"/>
			</s:FormItem>

			<s:FormItem label="What size?" visible="{bloodClotsIndicatorToggleSwitch.selected}"
						includeInLayout="{bloodClotsIndicatorToggleSwitch.selected}"
						skinClass="spark.skins.spark.FormItemSkin"
						backgroundColor="0xd3d3d3">
				<s:HGroup>
					<s:RadioButton id="bloodClotsSmallCheckBox" label="Small" skinClass="spark.skins.spark.RadioButtonSkin"
								   click="bloodClotsSmallCheckBox_changeHandler(event)"/>
					<s:RadioButton id="bloodClotsMediumCheckBox" label="Medium"
								   skinClass="spark.skins.spark.RadioButtonSkin"
								   click="bloodClotsMediumCheckBox_changeHandler(event)"/>
					<s:RadioButton id="feminineProductsLargeCheckBox" label="Large"
								   skinClass="spark.skins.spark.RadioButtonSkin"
								   click="bloodClotsLargeCheckBox_changeHandler(event)"/>
				</s:HGroup>
			</s:FormItem>

			<s:FormItem label="Have you used any feminine products in the last 24 hours?"
						skinClass="spark.skins.spark.FormItemSkin"
						backgroundColor="0xd3d3d3"
						visible="{bleedingIndicatorToggleSwitch.selected}"
						includeInLayout="{bleedingIndicatorToggleSwitch.selected}">
			<s:ToggleSwitch id="FeminineProductsIndicatorToggleSwitch"
							skinClass="hw2013Endometriosis.plugins.problems.endometriosis.view.YesNoToggleSwitchSkin"
							click="feminineProductsIndicatorToggleSwitch_changeHandler(event)"
							accentColor="0x9370db"/>
		</s:FormItem>

		<s:FormItem label="What kind of feminine product are you using?"
					visible="{FeminineProductsIndicatorToggleSwitch.selected}"
					includeInLayout="{FeminineProductsIndicatorToggleSwitch.selected}"
					skinClass="spark.skins.spark.FormItemSkin"
					backgroundColor="0xd3d3d3">
			<s:HGroup variableColumnWidth="false" columnWidth="100">
				<s:CheckBox id="feminineProductsPantilinerCheckBox" label="Pantiliner"
							skinClass="spark.skins.spark.CheckBoxSkin"
							click="feminineProductsPantilinerCheckBox_changeHandler(event)"/>
				<s:CheckBox id="feminineProductsMaxiPadCheckBox" label="MaxiPad"
							skinClass="spark.skins.spark.CheckBoxSkin"
							click="feminineProductsMaxiPadCheckBox_changeHandler(event)"/>
				<s:CheckBox id="feminineProductsTamponCheckBox" label="Tampon"
							skinClass="spark.skins.spark.CheckBoxSkin"
							click="feminineProductsTamponCheckBox_changeHandler(event)"/>
			</s:HGroup>
		</s:FormItem>

		<s:FormItem label="About how many have you bled through in the past 24 hours?"
					visible="{FeminineProductsIndicatorToggleSwitch.selected}"
					includeInLayout="{FeminineProductsIndicatorToggleSwitch.selected}"
					skinClass="spark.skins.spark.FormItemSkin"
					backgroundColor="0xd3d3d3">
			<s:HGroup variableColumnWidth="false" columnWidth="75">
				<s:TextInput width="50" skinClass="spark.skins.mobile.TextInputSkin"/>
				<s:Label text="or"
						 textAlign="center"
						 alignmentBaseline="ideographicBottom"/>
				<s:CheckBox id="spottingFeminineProductsCheckBox" label="spotting"
							skinClass="spark.skins.spark.CheckBoxSkin"
							click="spottingFeminingProductsCheckBox_changeHandler(event)"/>
			</s:HGroup>
		</s:FormItem>

		<s:FormItem
				skinClass="spark.skins.spark.FormItemSkin"
				backgroundColor="0xd3d3d3">
			<s:Button label="Submit"
					  width="150"
					  skinClass="spark.skins.mobile.ButtonSkin"
					  chromeColor="0x9370db"/>
		</s:FormItem>
	</s:Form>
</s:Panel>

