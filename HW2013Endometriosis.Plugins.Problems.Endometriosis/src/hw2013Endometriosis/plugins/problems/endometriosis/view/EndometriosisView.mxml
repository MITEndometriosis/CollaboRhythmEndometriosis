<tablet:TabletViewBase xmlns:fx="http://ns.adobe.com/mxml/2009"
					   xmlns:s="library://ns.adobe.com/flex/spark"
					   xmlns:tablet="collaboRhythm.shared.view.tablet.*"
					   xmlns:view="hw2013Endometriosis.plugins.problems.endometriosis.view.*"
					   xmlns:mx="library://ns.adobe.com/flex/mx"
					   title="Endometriosis">

	<mx:Panel title="Resource Center" backgroundColor="0x778899" borderColor="0x778899" width="1000"
			  x="20" y="20">

		<mx:Label width="100%" color="0x778899"
				  text="Select an Accordion navigator button to change the panel."/>

		<mx:Accordion id="accordion" color="black" width="100%" height="100%">
			<!-- Define each panel using a VBox container. -->
			<mx:VBox label="Overview">
				<mx:Label text="Overview"/>
			</mx:VBox>

			<mx:VBox label="Patient Tips">
				<mx:Label text="Patient Tips"/>
			</mx:VBox>

			<mx:VBox label="Day-of Instructions">
				<mx:Label text="Day-of Instructions"/>
			</mx:VBox>

			<mx:VBox label="Possible Complications">
				<mx:Label text="Possible Complications"/>
			</mx:VBox>
		</mx:Accordion>

	</mx:Panel>

	<fx:Script><![CDATA[
		import hw2013Endometriosis.plugins.problems.endometriosis.controller.EndometriosisAppController;
		import hw2013Endometriosis.plugins.problems.endometriosis.model.EndometriosisModel;

		import collaboRhythm.shared.collaboration.model.CollaborationLobbyNetConnectionServiceProxy;
		import collaboRhythm.shared.collaboration.model.CollaborationModel;

		[Bindable]
		private var _controller:EndometriosisAppController;
		private var _model:EndometriosisModel;
		private var _collaborationLobbyNetConnectionServiceProxy:CollaborationLobbyNetConnectionServiceProxy;

		override public function set data(value:Object):void
		{
			super.data = value;

			_controller = value as EndometriosisAppController;
			_model = _controller.model;

			_collaborationLobbyNetConnectionServiceProxy = _controller.collaborationLobbyNetConnectionServiceProxy as
					CollaborationLobbyNetConnectionServiceProxy;
		}
		]]></fx:Script>

