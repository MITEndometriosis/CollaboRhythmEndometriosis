	<LoadableIndivoDocument>
		<document>
			<HealthActionPlan xmlns="http://indivo.org/vocab/xml/documents/healthActionPlan#"
							  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
				<name>Bleeding Evaluation</name>
				<planType>Prescribed</planType>
				<plannedBy>jking@records.media.mit.edu</plannedBy>
				<datePlanned>2011-07-14T09:00:00-04:00</datePlanned>
				<indication>Post-operational Plan for Endometriosis Surgery</indication>
				<instructions>Use CollaboRhythm to record vaginal bleeding daily for the first as needed for 6 weeks after operation.
				</instructions>
				<system>CollaboRhythm Bleeding Evaluation Form</system>
				<actions>
					<action	xsi:type="ActionStep">
						<position />
						<stopConditions />
						<targets />
						<measurementPlans>
							<measurementPlan>
								<name type="http://measures.coded.values/" value="1">Has Bleeding</name>
								<type type="http://measures.type.coded.values/" value="3">Systolic</type>
								<aggregationFunction type="http://aggregation.coded.values/">avg</aggregationFunction>
							</measurementPlan>
							<measurementPlan>
								<name type="http://measures.coded.values/" value="1">Color</name>
								<type type="http://measures.type.coded.values/" value="3">D</type>
								<aggregationFunction type="http://aggregation.coded.values/">avg</aggregationFunction>
							</measurementPlan>
							<measurementPlan>
								<name type="http://measures.coded.values/" value="1">Blood Clots</name>
								<type/>
								<aggregationFunction type="http://aggregation.coded.values/">avg</aggregationFunction>
							</measurementPlan>
							<measurementPlan>
								<name type="http://measures.coded.values/" value="1">Size of Blood Clots</name>
								<type type="http://measures.type.coded.values/" value="3">Systolic</type>
								<aggregationFunction type="http://aggregation.coded.values/">avg</aggregationFunction>
							</measurementPlan>
							<measurementPlan>
								<name type="http://measures.coded.values/" value="1">Feminine Products</name>
								<type type="http://measures.type.coded.values/" value="3">Diastolic</type>
								<aggregationFunction type="http://aggregation.coded.values/">avg</aggregationFunction>
							</measurementPlan>
							<measurementPlan>
								<name type="http://measures.coded.values/" value="1">Number Used in 24 Hours</name>
								<type/>
								<aggregationFunction type="http://aggregation.coded.values/">avg</aggregationFunction>
							</measurementPlan>
						</measurementPlans>

						<devicePlans/>
						<medicationPlans />

						<name type="http://actions.repository/" value="1">Evaluate vaginal bleeding level</name>
						<type type="http://actions.repository.type/" value="1">Vaginal Bleeding</type>
						<additionalDetails/>
						<instructions>Fill out evaluation form</instructions>
					</action>
				</actions>
			</HealthActionPlan>
		</document>
